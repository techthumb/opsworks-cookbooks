<% (['development', 'production'] + [@environment]).uniq.each do |env| -%>
<%= env %>:
  adapter: postgresql
  encoding: unicode
  pool: 10
  host: <%= @node[:opsworks][:layers][:lb][:instances].first[:private_ip] %>
  username: <%= @node[:opsworks][:stack][:name] %>
  password: <%= @node[:postgresql][:password] %>
  min_messages: WARNING
  reconnect: true
<% end %>

